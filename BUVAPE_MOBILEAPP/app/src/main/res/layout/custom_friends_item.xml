<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_contact_person"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/avatar1"
                android:layout_gravity="center" />


            <ImageView
                android:id="@+id/img_status_online"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/background_online_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="3dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Chat Choi"
                android:textColor="#3A3838"
                android:maxWidth="135dp"
                android:minWidth="135dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="16sp"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/txt_Phone_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="13sp"
                android:maxWidth="135dp"
                android:textColor="#A3A2A2"
                android:text="+84840505678"
                />


        </LinearLayout>

        <Button
            android:id="@+id/btn_message"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_message_ok"
            android:textColor="#FFFFFF"
            android:paddingStart="5dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/background_button_accept"
            android:text="Nhắn tin"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:paddingStart="15dp"
            android:gravity="left|center_vertical"
            android:drawableStart="@drawable/ic_delete_ok"
            android:background="@drawable/background_delete_friend"
            android:text="Xóa"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>